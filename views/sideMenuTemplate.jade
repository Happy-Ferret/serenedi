doctype html
#sideMenu.optionShiftElement
  .row
    .col-xs-12
      h1
        | Event Search Settings
  .row
    .col-xs-12
      h3
        | Map Center 
        span#loadMyLocation.glyphicon.glyphicon-map-marker(data-content="Go to My Location", data-placement="bottom", data-trigger="hover", rel="popover")
  .row
    .col-xs-6
      h4
        | Longitude:
    .col-xs-6
      input#lng.location(type="number", style="width: 100px; margin-left: -20px;", step="0.005", value="{{prop.lng}}")
  .row
    .col-xs-6
      h4
        | Latitude:
    .col-xs-6
      input#lat.location(type="number", style="width: 100px; margin-left: -20px;", step="0.005", value="{{prop.lat}}")
  .row
    .col-xs-12
      h3
