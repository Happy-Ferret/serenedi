doctype html
#infoTable(style='font-size:10pt; font-family: Helvetica; width: 440px; height: 500px; overflow: hidden;')
  table(width='100%', height='100%', cellpadding='0', cellspacing='0', style='overflow:hidden; padding-left: 5px; margin-left: 15px;')
    tr
      td(colspan='2')
        strong {{title}}
    tr
      td(width='75px') URL:
      td
        a(href='{{url.host}}', target='_blank') {{url.host}}
        <br/>
        a(href='{{url.serenedi}}', target='_blank') {{url.serenedi}}
    tr
      td Start:
      td {{start}}
    tr
      td End:
      td {{end}}
    | {{#showAddr}}
    tr
      td Address
      td {{addr}}
    tr
      td
      td {{city}}, {{region}} {{zip}}
    | {{/showAddr}}
    tr
      td Category:
      td {{category}}
    tr
      td(colspan='2', align='left')
        .fb-like(data-href='{{url.serenedi}}', data-width='400', data-layout='standard', data-action='like', data-show-faces'true', data-share='true')
    tr
      td(colspan='2')
        .fb-comments(href='{{url.serenedi}}', data-numposts='2', data-width="400", data-colorscheme='light')
